# TrueMark Mint Environment Configuration
# Copy this to .env and configure your settings

# Backend Configuration
BACKEND_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api

# Polygon Network Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137
POLYGON_TRUEMARK_CONTRACT=0x0000000000000000000000000000000000000000
POLYGON_MARKETPLACE_CONTRACT=0x0000000000000000000000000000000000000000

# Ethereum Network Configuration  
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_CHAIN_ID=1
ETHEREUM_TRUEMARK_CONTRACT=0x0000000000000000000000000000000000000000
ETHEREUM_MARKETPLACE_CONTRACT=0x0000000000000000000000000000000000000000

# IPFS Configuration
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud

# Application Settings
MAX_FILE_SIZE=104857600
CHUNK_SIZE=1048576
SESSION_DURATION=86400000
REMEMBER_DURATION=2592000000

# Security Settings
JWT_SECRET=your-secret-key-here
SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=900000

# Demo Mode Settings
DEMO_MODE=true
DEMO_BACKEND_DELAY=1500
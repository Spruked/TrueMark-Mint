# TrueMark Mint Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
FLASK_ENV=production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate strong random keys for production
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-too
API_KEY=your-api-key-for-backend-access

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///data/truemark.db
# For PostgreSQL: postgresql://username:password@localhost:5432/truemark
# For MySQL: mysql://username:password@localhost:3306/truemark

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Ethereum/Web3 Provider (Infura, Alchemy, etc.)
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
WEB3_NETWORK=mainnet
PRIVATE_KEY=your-ethereum-private-key-for-minting

# Smart Contract Addresses
NFT_CONTRACT_ADDRESS=0x...
MARKETPLACE_CONTRACT_ADDRESS=0x...

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================
IPFS_NODE_URL=https://ipfs.infura.io:5001/api/v0
IPFS_PROJECT_ID=your-ipfs-project-id
IPFS_PROJECT_SECRET=your-ipfs-project-secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=support@truemarkmint.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@truemarkmint.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Cloudflare (for deployment)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=https://truemarkmint.com,https://www.truemarkmint.com

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,svg,pdf,doc,docx,txt,mp4,mp3,zip

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_URL=redis://redis:6379/0
SESSION_EXPIRE=86400  # 24 hours in seconds